<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_plant"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pervasive.iu.com.greenthumb.MyPlants.PlantActivity">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_save"
        android:id="@+id/btnSavePlant"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/txtNotiTime" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_default_plant"
        android:id="@+id/imgViewPlant"
        android:layout_marginTop="49dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@drawable/ic_add_image"
        android:id="@+id/btnAddImage"
        android:onClick="onClickCamera"
        android:layout_below="@+id/imgViewPlant"
        android:layout_alignStart="@+id/btnSavePlant" />

    <!--<android.support.design.widget.TextInputLayout
        android:id="@+id/inputPlantName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:inputType="text"
            android:id="@+id/txtPlantName"
            android:hint="Plant Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/btnAddImage"
            android:layout_alignEnd="@+id/txtKitNum" />
    </android.support.design.widget.TextInputLayout>-->

    <EditText
        android:inputType="text"
        android:id="@+id/txtPlantName"
        android:hint="Plant Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/btnAddImage"
        android:layout_alignEnd="@+id/txtKitNum" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rgLocation"
        android:layout_below="@+id/txtNotiTime"
        android:layout_alignStart="@+id/txtNotiTime"
        android:layout_marginTop="14dp">
        <RadioButton
            android:text="Outdoor"
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:id="@+id/rbOutdoor"
            android:layout_above="@+id/btnSavePlant"
            android:layout_alignStart="@+id/rgLocation"
            android:layout_marginBottom="13dp" />

        <RadioButton
            android:text="Indoor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rbIndoor"
            android:layout_above="@+id/rbOutdoor"
            android:layout_toEndOf="@+id/rgLocation" />
    </RadioGroup>

    <EditText
        android:inputType="text"
        android:id="@+id/txtNotiTime"
        android:hint="Notification time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/txtPlantName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp" />

    <EditText
        android:inputType="text"
        android:id="@+id/txtKitNum"
        android:hint="Kit Number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/txtPlantName"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
