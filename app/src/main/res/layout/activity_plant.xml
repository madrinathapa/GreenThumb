<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_plant"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pervasive.iu.com.greenthumb.MyPlants.PlantActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_default_plant"
        android:id="@+id/imgViewPlant"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rgLocation">
        <RadioButton
            android:text="Indoor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="38dp"
            android:id="@+id/rbIndoor"
            android:layout_below="@+id/txtPlantName"
            android:layout_alignStart="@+id/txtPlantName" />

        <RadioButton
            android:text="Outdoor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="57dp"
            android:id="@+id/rbOutdoor"
            android:layout_alignBaseline="@+id/rbIndoor"
            android:layout_alignBottom="@+id/rbIndoor"
            android:layout_alignEnd="@+id/txtPlantName" />

    </RadioGroup>

    <EditText
        android:inputType="text"
        android:id="@+id/txtNotiTime"
        android:hint="Notification time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="26dp"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Location"
        android:layout_width="139dp"
        android:layout_height="wrap_content"
        android:id="@+id/lblLocation"
        android:textAlignment="center"
        android:layout_marginBottom="10dp" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@drawable/ic_add_image"
        android:id="@+id/add"
        android:layout_alignEnd="@+id/txtPlantName"
        android:layout_alignBottom="@+id/rgLocation"
        android:layout_alignStart="@+id/imageButton3" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_save"
        android:id="@+id/imageButton3"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/txtNotiTime" />

    <EditText
        android:inputType="text"
        android:id="@+id/txtPlantName"
        android:hint="Plant Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="140dp"
        android:layout_below="@+id/rgLocation"
        android:layout_alignEnd="@+id/imageButton3" />

</RelativeLayout>
